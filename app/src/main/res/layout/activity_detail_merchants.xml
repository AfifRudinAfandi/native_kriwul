<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailMerchants">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_detail_outlate"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />
            <RelativeLayout
                android:layout_marginTop="18dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_description_outlate"
                    android:text="Canada"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/nunitosans_bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:textSize="12dp"
                    android:textColor="@color/colorGreen"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chicken"
                    android:textSize="12sp"
                    android:textColor="@color/colorOrange_2"
                    android:background="@drawable/view_circular_horizontal"
                    android:backgroundTint="@color/colorOrange_3"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="12dp"
                    android:fontFamily="@font/nunitosans_semibold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textSize="12sp"
                    android:textColor="@color/colorOrange_2"
                    android:background="@drawable/view_circular_horizontal"
                    android:backgroundTint="@color/colorOrange_3"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="12dp"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/nunitosans_semibold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indonesia"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/colorOrange_2"
                    android:background="@drawable/view_circular_horizontal"
                    android:backgroundTint="@color/colorOrange_3"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="12dp"
                    android:fontFamily="@font/nunitosans_semibold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_star"
                        android:scaleType="fitCenter"/>
                    <TextView
                        android:id="@+id/detail_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4,5 (234)"
                        android:fontFamily="@font/nunitosans_semibold"
                        android:textSize="14sp"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/colorGray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="24dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_time"
                        android:scaleType="fitCenter"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 Min"
                        android:fontFamily="@font/nunitosans_semibold"
                        android:textSize="14sp"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/colorGray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="24dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_product"
                        android:scaleType="fitCenter"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free"
                        android:fontFamily="@font/nunitosans_semibold"
                        android:textSize="14sp"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/colorGray"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/view_rectangle"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:backgroundTint="@color/colorGray_2"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/view_circle"
                        app:tint="@color/colorTosca"
                        android:layout_marginRight="10dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order with Delivery"
                            android:fontFamily="@font/nunitosans_bold"
                            android:textColor="@color/colorBlack"
                            android:textSize="14dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery Now"
                            android:fontFamily="@font/nunitosans_semibold"
                            android:textColor="@color/colorGray"
                            android:textSize="12dp"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Options"
                    android:textColor="@color/colorTosca"
                    android:fontFamily="@font/nunitosans_bold"
                    android:textSize="10sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="18dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommended for you"
                android:textColor="@color/colorGray"
                android:fontFamily="@font/nunitosans_bold"
                android:textSize="14sp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:paddingRight="16dp"
                android:overScrollMode="never"
                android:layout_height="match_parent"
                android:id="@+id/recycler_recommend"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/appbar_gradient"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/back_detail_outlate"
                android:layout_width="56dp"
                android:layout_gravity="bottom"
                android:layout_height="56dp"
                android:clickable="true">
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_left"
                    app:tint="@color/colorWhite" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="56dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:text="Merchants"/>
            </FrameLayout>

        </FrameLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>